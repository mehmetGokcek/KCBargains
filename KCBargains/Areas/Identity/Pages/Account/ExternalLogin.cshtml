@page
@model ExternalLoginModel

<div class="container w-50" style="padding-top:40px;">
    <section class="page-section" id="about">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">SIGN UP</h2>
            <h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
            <h3 class="section-subheading text-muted mb-3" id="external-login-description">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                Please enter an email address for this site below and click the Register button to finish
                logging in.
            </h3>
        </div>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <label asp-for="Input.Email"></label>
               <input asp-for="Input.Email" class="form-control" />
               <small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
             </div>
            <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>
        </form>
     </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
