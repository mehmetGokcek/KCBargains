@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
        <ul class="navbar-nav text-uppercase ml-auto">

            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link js-scroll-trigger">SIGN OUT</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav text-uppercase ml-auto">
        <li class="nav-item"> <a class="nav-link js-scroll-trigger" id="register" asp-area="Identity" asp-page="/Account/Register">Sign up</a> </li>
        <li class="nav-item"> <a class="nav-link js-scroll-trigger" id="login" asp-area="Identity" asp-page="/Account/Login">Sign in</a></li>
        <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
    </ul>
}


